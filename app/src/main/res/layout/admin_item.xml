<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d4cec2">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#488462"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Admin Options"
        android:id="@+id/admintv"
        android:layout_gravity="center_horizontal" />


    <Button
    android:layout_width="150sp"
    android:layout_height="55sp"
        android:id="@+id/edititem1"
        android:layout_marginTop="50sp"
    android:text="Add New Item"
    android:gravity="center"
        android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150sp"
            android:layout_height="55sp"
            android:id="@+id/edititem2"
            android:layout_marginTop="50sp"
            android:text="Delete Item"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150sp"
            android:layout_height="55sp"
            android:id="@+id/edititem3"
            android:layout_marginTop="50sp"
            android:text="Edit Price"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150sp"
            android:layout_height="55sp"
            android:id="@+id/edititem4"
            android:layout_marginTop="50sp"
            android:text="New Category"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>